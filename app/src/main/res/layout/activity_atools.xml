<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <EditText android:id="@+id/et_phone_num"
        style="@style/safe_content" />
    <TextView android:id="@+id/tv_select_contact"
        android:layout_marginTop="10dp"
        android:text="选择联系人"
        style="@style/safe_content"
        android:background="@android:color/darker_gray"/>
    <Button android:id="@+id/btn_query"
        android:layout_marginTop="10dp"
        android:text="查询"
        style="@style/safe_content" />
    <LinearLayout android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:text="归属地："
            style="@style/safe_content"
            android:layout_width="wrap_content"/>
        <TextView android:id="@+id/tv_show_attribution"
            style="@style/safe_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

</LinearLayout>