<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
    <RadioGroup android:id="@+id/rg_main_navigation"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">
        <RadioButton android:id="@+id/rb_main_home"
            android:drawableTop="@drawable/selector_home_btn"
            android:text="首页"
            style="@style/main_rb"
            />
        <RadioButton android:id="@+id/rb_main_news"
            android:text="新闻中心"
            android:drawableTop="@drawable/selector_news_btn"
            style="@style/main_rb" />
        <RadioButton android:id="@+id/rb_main_smartservice"
            android:text="智慧服务"
            android:drawableTop="@drawable/selector_smartservice_btn"
            style="@style/main_rb" />
        <RadioButton android:id="@+id/rb_main_govern"
            android:text="政务"
            android:drawableTop="@drawable/selector_govern_btn"
            style="@style/main_rb" />
        <RadioButton android:id="@+id/rb_main_setting"
            android:drawableTop="@drawable/selector_setting_btn"
            android:text="设置"
            style="@style/main_rb" />
    </RadioGroup>

</LinearLayout>
