<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cloud="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <TextView android:text="设置中心"
        style="@style/home_common_title" />
    <cloud.cn.applicationtest.ui.SettingItemView android:id="@+id/siv_auto_update"
        cloud:title="自动更新设置"
        cloud:desc_on="自动更新设置打开"
        cloud:desc_off="自动更新设置关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></cloud.cn.applicationtest.ui.SettingItemView>
    <cloud.cn.applicationtest.ui.SettingItemView android:id="@+id/siv_show_address"
        cloud:title="归属地显示设置"
        cloud:desc_on="归属地显示开启"
        cloud:desc_off="归属地显示关闭"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></cloud.cn.applicationtest.ui.SettingItemView>

</LinearLayout>